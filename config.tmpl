# YOUR CONFIG OPTIONS

### DOCKER ###########################################
docker.install=1
docker.host.ip=127.0.0.1
# switch to build/pull these images
docker.php=1
docker.joomla=1
docker.container.name.prefix=VDM
docker.container.network=Joomla-VDM

### WEBSITE CONTAINER #################################
container.reset=1
# the container main domain
container.website.domain=joomla.vdm
# the generic website name
container.website.websitename="Joomla VDM Website"
# the generic name of a user
container.website.uname="Joomla Method"
# the generic useruser
container.website.username=method
# the generic user password
container.website.userpass=vastdevelopmentmethod
# should the user be asked to reset their password
container.website.passreset=0
# the generic user and site email
container.website.email="joomla@example.com"
# the database generic settings
container.website.dbdriver=mysqli
container.website.dbhost=mysql
container.website.dbuser=vdm
container.website.dbpass=vastdevelopmentmethod
container.website.dbrootpass=vastdevelopmentmethod
container.website.dbname=joomla
container.website.dbprefix=vdm
# the email generic settings
container.website.smtphost=mailcatcher
container.website.sslemail=joomla+ssl@vdm.io
# the port generic settings
container.website.portweb=80
container.website.portssl=443
container.website.portpam=81
container.website.portmc=82
# the volumes generic settings
container.website.volwebroot=web-root
container.website.voldbhost=db-data
container.website.localpath=~/

### JOOMLA BASE ######################################
# 1 is true and 0 is false
joomla.image.pull=0
# default "JOOMLA4.0.0-rc2"
joomla.image.docker.folder=JOOMLA4.0.0-rc2
# default "vdmio/joomla"
joomla.image.docker.name=vdmio/joomla
# default "4.0.0-beta4"
joomla.image.docker.tag.name=4.0.0-rc2
# default Joomla package url
# jo#omla.image.packagejoomla.url="https://github.com/joomla/joomla-cms/releases/download/4.0.0-rc2/Joomla_4.0.0-rc2-Release_Candidate-Full_Package.zip"

### PHP IMAGE #########################################
# 1 is true and 0 is false
php.image.pull=0
# default "PHP7.4"
php.image.docker.folder=PHP7.4
# default "vdmio/php"
php.image.docker.name=vdmio/php
# default "7.4-apache-node12"
php.image.docker.tag.name=7.4-apache-node12
